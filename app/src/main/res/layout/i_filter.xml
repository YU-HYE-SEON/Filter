<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/filterImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="#BDBDBD"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/icon_bookmark_no"
        app:layout_constraintEnd_toEndOf="@+id/filterImage"
        app:layout_constraintTop_toTopOf="@+id/filterImage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filterInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/filterImage"
        app:layout_constraintStart_toStartOf="@+id/filterImage"
        app:layout_constraintTop_toBottomOf="@+id/filterImage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/filterTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="필터이름"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by. "
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@+id/filterTitle"
                app:layout_constraintTop_toBottomOf="@+id/filterTitle" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/filterTitle"
                app:layout_constraintStart_toEndOf="@+id/by" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/filterTitle"
                app:layout_constraintBottom_toBottomOf="@+id/filterTitle" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/countTxt"
                app:layout_constraintTop_toTopOf="@+id/countTxt"
                app:layout_constraintEnd_toStartOf="@+id/countTxt" />

            <TextView
                android:id="@+id/countTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회 사용"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/nickname"
                app:layout_constraintEnd_toEndOf="@+id/price" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>